<h1>Notification Portal</h1>
<% if logged_in? %>
	<h2><%= current_user.fullname %></h2>
	<%= link_to "Log out", logout_path, method: "delete" %><br>
	<% if admin? %>
	<%= link_to "New Post", new_post_path %><br>
	<% end %>
	<%= link_to "All Posts", posts_path %>
<% else %>
	<%= link_to "Log in", login_path %>
<% end %>
