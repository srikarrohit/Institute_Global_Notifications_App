<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :content %>
	<%= f.text_field :content %>
	<br>
	<%= f.collection_select(:cat_id,@cats,:id, :category) %>

	<%= f.submit "Post" %>
<% end %>
<br>
<%= link_to "Back", root_path %>
