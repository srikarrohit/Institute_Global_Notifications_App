<%= form_for(@post) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :title %>
	<%= f.text_field :title %>
	
	<%= f.label :content %>
	<%= f.text_field :content %>
	
	<% @cats.each do |cat| %>
    <%= f.radio_button cat.id %>
    <%= f.label :cat_id, cat.category %>
    <br>
  <% end %>

	<%= f.submit "Post" %>
<% end %>
<br>
<%= link_to "Back", root_path %>
