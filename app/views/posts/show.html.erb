<%= @post.content %>
<% @comments.each do |comment| %>
	<p>Commented by:<%= comment.user.fullname %></p>
  <p>Comment:<%= comment.content %></p>
<% end %>

<% if false %>
<table>
<% @posts.each do |post| %>
    <tr>
			<td>Posted by:</td>
			<td><%= post.user.fullname %></td>
			<td>Title:</td>
			<td><%= post.title %></td>
      <td>Post: </td>
			<td><%= post.content %></td> 
    </tr>
</table><br>	
<% @comments.each do |comment| %>
	<% if comment.post_id == post.id %>
<div id="comments">
	<p>Commented by:<%= comment.user.fullname %></p>
	<p>Comment:<%= comment.content %></p>
</div>
	<% end %>
<% end %>
<%= form_for(:comment, url: posts_path, remote: true) do |f| %>
			  
  <%= f.label :newcomment %>
  <%= f.text_field :newcomment %>
	<%= f.text_field :id, :value => post.id ,:style => "display:none" %>
  <%= f.submit "comment" %>

<% end %>

<br>
<% end %>
<br>
<%= link_to "back", root_path %>
<% end %>
